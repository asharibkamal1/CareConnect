                            s += '<option value="' + res[i].circleId + '">' + res[i].circlelName + '</option>';
                        }
                        $("#circle").html(s);
                    }
                    else {
                        swal("Region not found.", {
                            icon: "info",
                        });
                        $("#circle").html('');
                        //$("#fieldUnitName").val("");
                        //$("#fieldUnitId").val("");
                        return false;
                    }
                },
                error: function (err) { }
            });

            $("#fieldunit").prop("disabled", false);
            $("#circle").prop("disabled", false);
