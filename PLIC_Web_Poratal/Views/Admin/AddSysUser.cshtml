<script>
    $('#cnic').mask('00000-0000000-0', { placeholder: "_____-_______-_      Please Enter Your CNIC" });
    $('#phoneno').mask('00000000000', { placeholder: "Please Enter Mobile Number" });

    $("#isCircle").change(function () {
        if (this.checked) {
            $("#region").prop("disabled", true);
            $("#fieldunit").prop("disabled", true);
            $("#isRegion").prop("disabled", true);
            $("#region").val("");
            $("#fieldunit").val("");
        }
        else {
            $("#region").prop("disabled", false);
            $("#fieldunit").prop("disabled", false);
            $("#isRegion").prop("disabled", false);
        }

    })

    $("#isRegion").change(function () {
        if (this.checked) {
            $("#fieldunit").prop("disabled", true);
            $("#isCircle").prop("disabled", true);
            $("#fieldunit").val("");
        }
        else {
            $("#fieldunit").prop("disabled", false);
            $("#isCircle").prop("disabled", false);
        }

    })

    $("#isSuperAdmin").change(function () {
        if (this.checked) {
            $("#fieldunit").prop("disabled", true);
            $("#circle").prop("disabled", true);
            $("#region").prop("disabled", true);
            $("#isCircle").prop("disabled", true);
            $("#isRegion").prop("disabled", true);
            $("#circle").val("");
            $("#region").val("");
            $("#fieldunit").val("");
        }
        else {
            $.ajax({
                url: "/Admin/GetCircles/",
                type: "POST",
                /*data: JSON.parse(JSON.stringify({ circleId })),*/
                success: function (res) {
                    debugger;
                    if (res.length > 0) {
                        var s = '<option selected="selected"></option>';
