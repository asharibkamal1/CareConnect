    //-------------------------------------------------------------------------------------
    $("#circle").change(function () {
        debugger;
        var circleId = $("#circle").val();
        if (circleId == "") {
            swal("Please select circle.", {
                icon: "info",
            });
            return false;
        }
        $.ajax({
            url: "/Admin/GetRegions/",
            type: "POST",
            data: JSON.parse(JSON.stringify({ circleId })),
            success: function (res) {
                debugger;
                if (res.length > 0) {
                    var s = '<option selected="selected"></option>';
                    for (var i = 0; i < res.length; i++) {
                        s += '<option value="' + res[i].regionId + '">' + res[i].regionName + '</option>';
                    }
                    $("#region").html(s);
                }
                else {
                    swal("Region not found.", {
                        icon: "info",
                    });
                    $("#region").html('');
                    //$("#fieldUnitName").val("");
                    //$("#fieldUnitId").val("");
                    return false;
                }
            },
            error: function (err) { }
        });
    });

    //-----------------------------------------------------------------------------------
    $("#region").change(function () {
        debugger;
        var regionId = $("#region").val();
        if (regionId == "") {
            swal("Please select region.", {
                icon: "info",
            });
            return false;
        }
        $.ajax({
            url: "/Admin/GetFielUnitList/",
            type: "POST",
            data: JSON.parse(JSON.stringify({ regionId })),
            success: function (res) {
                debugger;
                if (res.length > 0) {
                    var s = '<option selected="selected"></option>';
                    for (var i = 0; i < res.length; i++) {
                        s += '<option value="' + res[i].fieldUnitId + '">' + res[i].fieldUnitName + '</option>';
                    }
                    $("#fieldunit").html(s);
                }
                else {
                    swal("Fielunit not found.", {
                        icon: "info",
                    });
                    $("#fieldunit").html('');
                    //$("#fieldUnitName").val("");
                    //$("#fieldUnitId").val("");
                    return false;
                }
            },
            error: function (err) { }
        });
    });

    //----------------------------------------------------
    function submitForm(form) {
        swal({
            title: "Are you sure?",
            text: "The data will be submitted.",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then(function (isOkay) {
                if (isOkay) {
                    form.submit();
                }
            });
        return false;
    }
