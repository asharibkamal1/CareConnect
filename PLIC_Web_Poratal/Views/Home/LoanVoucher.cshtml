@model IEnumerable<PLIC_Web_Poratal.Models.LoanVoucher>

@{
    ViewData["Title"] = "Loan Voucher";
}


@*<div class="text-center">
        <h1 class="display-4">Welcome</h1>
        <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    </div>*@




<div class="portlet-body">
    <div class="col-lg-12">
        <p class="voucher">Loan Vouchers <a class="btn" href="@Url.Action("Menu","Home")" style="float:right; color:white">Back</a></p>
        @if (Model.Count() == 0)
        {
            @if (@ViewBag.Message == "NotSanctioned")
            {
                <script type="text/javascript" style="color:green">
                        swal("Loan is not sanctioned against policy no:   @ViewBag.pol", {
                        icon: "info",
                        });
                </script>
            }
            else
            {
    <script type="text/javascript" style="color:green">
                        swal("@ViewBag.Message  @ViewBag.pol \n Please press button to generate voucher", {
                        icon: "info",
                        });
    </script>

            }
            <div class="row p-1">
                <div class="col-md-2"></div>
                <div class="col-md-4 p-2">
                    <p>Please Press Button To Generate Vouchar <i class="icon-arrow-right"></i> </p>
                </div>
                <div class="col-md-4">
                    @using (Html.BeginForm("generateVoucher", "Home", new { option = "Loan_Voucher" }))
                    {
                        <button class="btn" style="background-color: #0565B7; color : white">Generate Voucher</button>
                    }

                </div>
            </div>
        }
        else
        {
            @if (ViewBag.sucess == "OK")
            {
                <script type="text/javascript">
                    swal("Generated Successfully", {
                        icon: "success",
                        timer: 3000,
                    });
                </script>
            }
            <div class="row  p-1">
                <div class="col-md-1"></div>
                <div class="col-md-4 p-2">
                    <p>Please Press Button To Regenerate Vouchar</p>
                </div>
                <div class="col-md-3">
                    @using (Html.BeginForm("RegenerateVoucher", "Home", new { option = "Short_Payment_Voucher" }))
                    {
                        <button class="btn" style="background-color: #0565B7; color: white ">Regenerate Voucher</button>
                    }
                </div>
            </div>

            <div class="table-responsive" style="background-color:white">
                <table id="new_Id" class="stripe row-border order-column text-center">

                    <thead style="position:sticky">
                        <tr>
                            <th scope="col">Sr.No</th>
                            <th scope="col">View Voucher</th>
                            <th scope="col">Policy No</th>
                            <th scope="col">Loan Account No</th>
                            <th scope="col">Voucher No</th>
                            <th scope="col">Repayment Month</th>
                            <th scope="col">Principal Loan Amount</th>
                            <th scope="col">Interest</th>
                            <th scope="col">Payment Amount</th>
                            <th scope="col">Outstanding Balance</th>
                            <th scope="col">Bearing Amount</th>
                            <th scope="col">Monthly Interest</th>
                            <th scope="col">Cumulative Interest</th>
                            <th scope="col">Due Date</th>
                            <th scope="col">IsPaid</th>
                            <th scope="col">Name</th>
                            <th scope="col">CNIC</th>
                            <th scope="col">Installment No.</th>
                            <th scope="col">Book No</th>
                            <th scope="col">Field Unit</th>
                            <th scope="col">Origin</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.seqNo)
                                </td>
                                <td>
                                    @Html.ActionLink(
                                       // "Print Premium Voucher",
                                       "View Voucher",
                                        "PrintLoanVoucher",
                                        "Home",
                                        new { VoucherNo = item.voucherNumber.ToString(), iid = item.seqNo.ToString(), target = "_blank" },
                                        //new { target = "_blank" },
                                        //new { target = "_blank" },
                                        new { @class = "button", target = "_blank" }

                                        //new { target = "_blank" }

                                        )
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.policyNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.loanAccountNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.voucherNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RePaymentMonth)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.principalLoanAmount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.interest)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.paymentAmount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.OutstandingBalance)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.bearingAmount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.monthlyInterestNew)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.monthWiseIntrerestNew)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.dueDate)
                                </td>
                                <td>
                                    @if (item.isPaid)
                                    {
                                        <span>True</span>
                                    }
                                    else
                                    {
                                        <span>False</span>
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.cnic)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InstallmentNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.bookNo)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.fieldUnitName)

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.origin)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>

</div>




<style>
    .button {
        display: block;
        width: 120px;
        height: 25px;
        background: #c20b0b;
        /*padding: 10px;*/
        text-align: center;
        border-radius: 5px;
        color: white;
        font-size: 18px;
        /*font-weight: bold;*/
        line-height: 25px;
    }

    .newVoucher {
        background-color: #d93b3b;
        font-size: medium;
    }

    .voucher {
        background-color: #107773;
        border-color: #488c6c;
        color: white;
        font-family: sans-serif;
        font-size: 25px;
        padding: 7px 15px;
        margin: 0px;
        text-align: center;
    }

    th, td {
        white-space: nowrap;
    }

    div.dataTables_wrapper {
        margin: 0 auto;
    }

    div.container {
        width: 100%;
    }

    .fixed {
        position: fixed;
    }

    .portlet-body {
        margin-left: 0px;
    }
</style>



<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

<script>
    $(document).ready(function () {
        $('#new_Id').DataTable({
            scrollY: '60vh',
            scrollX: '60vh',
        });
    });

    //for Fixed Header
    $(window).scroll(function () {
        var sticky = $('.sticky'),
            scroll = $(window).scrollTop();

        if (scroll >= 100) sticky.addClass('fixed');
        else sticky.removeClass('fixed');
    });
</script>