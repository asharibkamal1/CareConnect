            //}
            //else if (files.length==1)
            //{
            //    fileLable.html(files[0].name);
            //}
        });
    });

    //$('#phone').mask('00000000000', { placeholder: "Please Enter Mobile Number" });
    //----------------------------------------------------
    function submitForm(form) {
        swal({
            title: "Are you sure?",
            text: "This complaint will be submitted.",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then(function (isOkay) {
                if (isOkay) {
                    form.submit();
                }
            });
        return false;
    }



</script>





