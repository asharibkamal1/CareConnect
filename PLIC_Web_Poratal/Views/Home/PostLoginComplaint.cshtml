    $('#phoneno').mask('00000000000', { placeholder: "Please Enter Mobile Number e.g (03000000000)" });

    $(document).ready(function () {
        debugger
        $('.custom-file-input').on("change", function () {
            //var fileName = $(this).val().split("\\").pop();
            //$(this).next('.custom-file-label').html(fileName);
            var fileLable = $(this).next('.custom-file-label');
            var files = $(this)[0].files;
            var lg = files.length; // get length
            var items = files;
            var maxFileSize = 25 * 1024 * 1024;
            var fileSize = 0;
            if (lg > 0) {
                if (files.length > 1) {
                    fileLable.html(files.length + ' files selected');
                }
                else if (files.length == 1) {
                    fileLable.html(files[0].name);
                }

                for (var i = 0; i < lg; i++) {
                    fileSize = fileSize + items[i].size; // get file size
                }
                if (fileSize > maxFileSize) {
                    $('#documentsSizeError').prop('hidden', false);
                    $('#btnSubmit').prop('disabled', true);
                }
                else {
                    $('#documentsSizeError').prop('hidden', true);
                    $('#btnSubmit').prop('disabled', false);
                }
            }



            //if (files.length > 1) {
