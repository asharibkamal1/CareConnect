<script>
    $(document).ready(function () {
        var table = $('#ReportaDataTable').DataTable({
            scrollX: '400px',
            scrollY: '900px',
            scrollCollapse: true,
            pageLength: 100,
            dom: 'Bfrtip', // 'B' for buttons
            buttons: [
                'copy', 'excel', 'print'
            ],
            language: {
                paginate: {
                    first: 'First',
                    previous: 'Previous',
                    next: 'Next',
                    last: 'Last'
                }
            },
            footerCallback: function (row, data, start, end, display) {
                var api = this.api();

                api.columns().every(function (index) {
                    if (index === 0) {
                        $(this.footer()).html('Total');
                    } else if (index === 5 || index === 6) {
                        var columnData = this.data();
                        var columnSum = columnData.reduce(function (acc, val) {
                            return acc + parseFloat(val);
                        }, 0);
                        var formattedSum = columnSum.toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 });
                        // Remove commas from the formatted number
                        formattedSum = formattedSum.replace(/,/g, '');
                        $(this.footer()).html('<div style="padding-right: 20px;">' + formattedSum + '</div>');
                    } else {
                        $(this.footer()).html('');
                    }
                });
            }
        });
    });




</script>







